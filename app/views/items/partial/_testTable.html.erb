<div class="container stockTable">
    <div class="row">  
      <table class="scroll">
        <thead>
          <tr>
            <th class="smCell center">櫃位</th>
            <th class="lgCell center">圖號</th>
            <th class="smCell"></th>
            <th class="mdCell center">舊圖號</th>
            <th class="mdCell center">提醒</th>
            <th class="smCell center">成品</th>
            <th class="smCell center">半成品</th>
          </tr>
        </thead>
        <tbody>            
          <% @items.each do |item| %>
            <%= form_for item do |f| %>
              <tr>
                <td class="smCell center"><%= f.text_field :location, size: 10 %></td>
                <td class="lgCell" style="text-align:right !important;">
                  <% if item.picnum.present? %>
                    <%= params[:search] ? emphasizePicnum(item.picnum,params[:search])  : formatPicnum(item.picnum) %>
                  <% end %>
                </td>
                <td class="smCell">
                  <%= link_to edit_item_path(item) do %><span id="apple"></span><% end %>
                </td>
                <td class="mdCell center">
                  <% if item.oldPicnum.present? %>
                    <%= params[:search] ? emphasizePicnum(item.oldPicnum,params[:search])  : formatPicnum(item.oldPicnum) %>
                  <% end %>
                </td>
                <td class="mdCell center">
                  <div>
                  <% if item.note.present? then%>
                    <%= f.text_area :note, :value => item.note.gsub(/\n$/,''), :rows => textAreaRowNum(item.note), class:'item-note' %>
                  <% else %>
                    <%= f.text_area :note, :rows => 1, class:'item-note' %>
                  <% end %>
                  </div>
                </td>
                <td class="smCell center"><%= f.text_field :finishQty, size: 6 %></td>
                <td class="smCell center"><%= f.text_field :unfinishQty, size: 6 %></td>
              </tr>
            <% end %>
          <% end %>
        </tbody>          
      </table>
    </div>
</div>
