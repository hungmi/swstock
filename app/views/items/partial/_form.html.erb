<div class="well">
  <%= form_for @item, :html => {:class => 'nobottommargin', :id => 'itemForm'} do |f| %>
      <div class="col_half">
        <%= f.label :location, '櫃位' %>
        <%= f.text_field :location, class:"sm-form-control",  required: true  %>
      </div>
      <div class="col_half col_last">
        <%= f.label :item_type, '品項' %>
        <%= f.text_field :item_type, class:"sm-form-control"  %>
      </div>
      <div class="col_full">
        <%= f.label :picnum, '圖號' %>
        <%= f.text_field :picnum, class:"sm-form-control",  required: true %>
      </div>
      <div class="col_full">
        <%= f.label :oldPicnum, '舊圖號' %>
        <%= f.text_field :oldPicnum, class:"sm-form-control"  %>
      </div>
      <div class="col_half">
        <%= f.label :finishQty, '成品數量' %>
        <%= f.text_field :finishQty, class:"sm-form-control", :type => 'number' %>
      </div>
      <div class="col_half col_last">
        <%= f.label :unfinishQty, '半成品數量' %>
        <%= f.text_field :unfinishQty, class:"sm-form-control", :type => 'number'   %>
      </div>
      <div class="col_half col_last">
        <%= f.label :note, '提醒' %>
        <%= f.text_area :note, :rows => 5, class:"sm-form-control"  %>
      </div>
      <div class="col_full">
        <%= f.submit @submitText , :class => "button button-3d nomargin" %>
        <%= link_to '返回', items_path %>
      </div>
      <div class="col_full <%= 'hidden' if params[:action] != 'new' %>">
      <%= form_tag import_items_path, multipart: true do %>
          <label for="uploadFileField" class="custom-file-upload"><i class="fa fa-cloud-upload"></i> 選擇EXCEL檔案</label>
          <%= file_field_tag :file, :id => "uploadFileField" %>
          <%= submit_tag "上傳", :class => "button button-3d nomargin"  %>
      <% end %>
      </div>
  <% end %>
</div>