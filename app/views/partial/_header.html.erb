<!-- Header
============================================= -->
<header id="header">

    <div id="header-wrap">

        <div class="container clearfix">

            <div id="primary-menu-trigger"><i class="icon-reorder"></i></div>
            <!-- Logo
            ============================================= -->
            <div id="logo">
                <a href="/" class="standard-logo" data-dark-logo="/assets/cat.png"><%= image_tag("cat.png", alt: "SWdurables") %></a>
            </div><!-- #logo end -->

            <!-- Primary Navigation
            ============================================= -->
            <nav id="primary-menu" class="dark style-2">

                <ul>
                    <li class="<%= 'current' if params[:controller] == 'items' and params[:action] == 'index' %>"><%= link_to '庫存表', items_path %></li>
                    <li class="<%= 'current' if params[:controller] == 'items' and params[:action] == 'new' %>"><%= link_to '新品項', new_item_path %></li>

                    <li class="hidden <%= 'current' if params[:controller] == 'orders' and params[:action] == '' %>"><%= link_to '新訂單', new_order_path %></li>
                    <li class="hidden <%= 'current' if params[:controller] == 'items' and params[:action] == '' %>"><a href="#" data-href="#section-about"><div>設定</div></a></li>
                    <li class="hidden <%= 'current' if params[:controller] == 'items' and params[:action] == '' %>"><a href="#" data-href="#section-about"><div>出貨</div></a></li>
                </ul>

                <!-- Top Search
                ============================================= -->
                <div id="top-search">
                    <a href="#" id="top-search-trigger"><i class="icon-search3"></i><i class="icon-line-cross"></i></a>
                    <%= form_tag(items_path, :method => "get") do %>
                        <%= text_field_tag :search, params[:search], placeholder: "Search Items", class:'form-control' %>
                        <% submit_tag "Search", :name => nil, class:'btn btn-default pull-right' %>
                    <% end %>
                </div><!-- #top-search end -->

            </nav><!-- #primary-menu end -->

        </div>

    </div>

</header><!-- #header end -->