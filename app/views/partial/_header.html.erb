             <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
             <span class="icon-bar"></span>
             <span class="icon-bar"></span>
             <span class="icon-bar"></span>
             </button>
            <!-- Logo ============================================= -->
             <a href="/" class="pull-left" data-dark-logo="/assets/cat.png"><%= image_tag("cat.png", size:"96x96", alt: "SWdurables") %></a></span>
