                  <%= text_field_tag :search, params[:search], :class => "form-control", :placeholder => 'Search', :autofocus => 'true', :onClick => "this.select();" %>
                  <div class="input-group-btn hidden" id="searchBtn">
                    <%= button_tag(type: 'submit', class: "btn btn-primary") do %>
                      <span class="glyphicon glyphicon-search"></span>
                    <% end %>
                  </div>
                </div>
             <% end %>
          </div>
          <div class="navbar-collapse collapse">
             <ul class="nav navbar-nav navbar-right">
                <li class="<%= 'active' if params[:controller] == 'items' and params[:action] == 'index' %>"><%= link_to '所有品項', items_path %></li>
                <li class="<%= 'active' if params[:controller] == 'items' and params[:action] == 'new' %>"><%= link_to '新品項', new_item_path %></li>

                <li class="hidden <%= 'current' if params[:controller] == 'orders' and params[:action] == '' %>"><%= link_to '新訂單', new_order_path %></li>
