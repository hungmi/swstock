%h1 Listing factories

%table
  %thead
    %tr
      %th Name
      %th
      %th
      %th

  %tbody
    - @factories.each do |factory|
      %tr
        %td= factory.name
        %td= link_to 'Show', factory
        %td= link_to 'Edit', edit_factory_path(factory)
        %td= link_to 'Destroy', factory, :method => :delete, :data => { :confirm => 'Are you sure?' }

