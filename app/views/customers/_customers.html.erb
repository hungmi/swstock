<table class="table">
	<thead>
		<tr>
			<th>客戶名稱</th>
			<th>顏色</th>
			<th></th>
		</tr>
	</thead>
	<tbody>
		<% @customers.each do |customer| %>
			<tr>
				<td><%= customer.name %></td>
				<td style='<%= "background: #{customer.color};" %>'><%= customer.color %></td>
				<td><%= link_to "編輯", edit_customer_path(customer) %></td>
			</tr>
		<% end %>
	</tbody>
</table>